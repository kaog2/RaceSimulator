<Window x:Class="RaceSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceSimulator"
        xmlns:language="clr-namespace:RaceSimulator.Langs"
        mc:Ignorable="d"
        Title="MainWindow" Height="398.4" Width="711.2">
    <Grid Margin="0,0,3.8,1.8">
        <Button Content="{x:Static language:Lang.start}" HorizontalAlignment="Left" Margin="214,157,0,0" VerticalAlignment="Top" Width="298" Height="82" Click="Button_Click"/>
        <Label  Content="{x:Static language:Lang.welcome}" HorizontalAlignment="Left" Margin="214,48,0,0" VerticalAlignment="Top" Height="65" Width="298"/>
        <ComboBox HorizontalAlignment="Left" Margin="532,48,0,0" VerticalAlignment="Top" Width="120"
                  SelectionChanged="ComboBox_SelectionChanged" Name="comboboxLenguage">
            <ComboBoxItem Content="{x:Static language:Lang.en}"></ComboBoxItem>
            <ComboBoxItem Content="{x:Static language:Lang.es}"></ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
